<Window x:Class="OpenCV2_photoapp.WindowWithSlider"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:openCv2Photoapp="clr-namespace:OpenCV2_photoapp"
        Title="" Height="75" Width="250">
    <Grid Background="#161616">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <openCv2Photoapp:SliderWTb Grid.Row="0" x:Name="kSlider" SliderValue="1" Minimum="0" Maximum="10"
                                   Step="1" Width="200" VerticalAlignment="Center" />
        <openCv2Photoapp:SliderWTb Grid.Row="1" x:Name="jSlider" SliderValue="1" Minimum="0" Maximum="10"
                                   Step="1" Width="200" VerticalAlignment="Center" />
    </Grid>
</Window>