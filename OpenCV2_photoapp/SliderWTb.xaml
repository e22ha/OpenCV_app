<UserControl x:Class="OpenCV2_photoapp.SliderWTb"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:OpenCV2_photoapp">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="0" Name="Tb" 
                 BorderThickness="1" Margin="0 0 5 0"
                 Foreground="Azure"
                 Background="Transparent"
                 Text="{Binding Path=SliderValue, RelativeSource={RelativeSource AncestorType={x:Type local:SliderWTb}}, StringFormat={}{0:F1}}"/>
        <Slider Grid.Column="1" Name="Slider" 
                Minimum="{Binding Path=Minimum, RelativeSource={RelativeSource AncestorType={x:Type local:SliderWTb}}}" 
                Maximum="{Binding Path=Maximum, RelativeSource={RelativeSource AncestorType={x:Type local:SliderWTb}}}" 
                Value="{Binding Path=SliderValue, RelativeSource={RelativeSource AncestorType={x:Type local:SliderWTb}}, Mode=TwoWay}" 
                SmallChange="{Binding Path=Step, RelativeSource={RelativeSource AncestorType={x:Type local:SliderWTb}}}" 
                LargeChange="{Binding Path=Step, RelativeSource={RelativeSource AncestorType={x:Type local:SliderWTb}}}"/>
    </Grid>
</UserControl>