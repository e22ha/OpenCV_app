<Window x:Class="OpenCV_photoapp.PointSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:OpenCV_photoapp"
        mc:Ignorable="d"
        Title="Point Selection Window" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="canvas" Background="Transparent"
                MouseDown="Canvas_MouseDown" MouseMove="Canvas_MouseMove" MouseUp="Canvas_MouseUp"/>
        <Button x:Name="confirmButton" Content="Confirm" 
                Click="ConfirmButton_Click"
                Margin="10" HorizontalAlignment="Right" VerticalAlignment="Top"/>
    </Grid>
</Window>